extend shared/skeleton

block append head
  
  style

    .login-form {
      -webkt-border-radius: 6px;
        -moz-border-radius: 6px;
          -o-border-radius: 6px;
             border-radius: 6px;
      border:  1px solid #ccc;
      padding: 30px;
      margin-top: 90px;
      width: 100%;
    }

    .login-form input {
      width:  95%;
      margin-top: 5px;
    }

    .login-container {
      width: 300px;
    }
 
    /* Landscape phones and down */
    @media (max-width: 480px) {
      .login-form {
        margin-top: 20px;
        padding: 20px;
        width: 85%;
        border: 0;
      }
      .login-container {
        width: 100%;
      }
    }



block append content

  div.login-container.container
    form.login-form(method='post', action='/login/')
      fieldset
        legend 登陆{AppName}
        label  
          | 用户名/电子邮箱
          input(type='text', name=loginFormFieldName, placeholder='请输入用户名')
        label  
          | 密码 
          input(type='password', name=passwordFormFieldName, placeholder='密码')
        p
          div.btn-group
            button#submit.btn.btn-success.btn-large 登陆
          div.btn-group
            button.btn.visible-phone 免费注册